{
    "name": "cine_lge_64",
    "n_gpu": 4,
    "arch": {
        "type": "CMRCLIP",
        "args": {
            "video_params": {
                "model": "SpaceTimeTransformer",
                "arch_config": "base_patch16_224",
                "num_frames": 64,
                "pretrained": true,
                "time_init": "zeros"
            },
            "text_params": {
                "model": "emilyalsentzer/Bio_ClinicalBERT",
                "pretrained": true,
                "input": "text"
            },
            "projection": "minimal",
            "projection_dim": 512,
            "load_checkpoint" : ""
        }
    },
    "data_loader": {
        "type": "TextVideoDataLoader",
        "args":{
            "dataset_name": "CMR",
            "data_dir": "/data/aiiih/projects/huangp2/Video_text_retrieval/data/CMR_cine_lge/",
            "shuffle": true,
            "num_workers": 16,
            "batch_size": 16,
            "split": "train",
            "cut": "full",
            "subsample": 1,
            "text_params": {
                "input": "text",
                "task": ""
            },
            "video_params": {
                "extraction_fps": 1,
                "extraction_res": 256,
                "input_res": 224,
                "num_frames": 64,
                "stride": 1
            }
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 3e-5,
            "weight_decay": 1e-5
        }
    },
    "lr_scheduler": {
        "warmup_epochs": 10,
        "warmup_start_lr": 0.00001,
        "eta_min":0
    },

    "loss": {
        "type": "NormSoftmaxLoss",
        "args": {
        }
    },
    "metrics": [
        "t2v_metrics",
        "v2t_metrics"
     ],
    "trainer": {
        "epochs": 2,
        "max_samples_per_epoch": 20000,
        "save_dir": "exps",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss_0",
        "early_stop": 100,
        "neptune": false,
        "use_amp": true
    },
    "visualizer": {
        "type": "",
        "args": {
        }
    }

}
